<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/theme</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/theme_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/theme_sec</item>
    </style>

    <style name="HeadingStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/std_text_size</item>
        <item name="android:layout_marginTop">@dimen/std_margin</item>
        <item name="android:layout_marginBottom">@dimen/std_margin</item>
        <item name="android:layout_marginLeft">@dimen/std_margin</item>
    </style>

    <style name="TidbitContentStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/theme_gray</item>
        <item name="android:textSize">@dimen/std_text_size</item>
    </style>

    <style name="LinLayoutItemStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/std_med_text_size</item>
    </style>

</resources>
