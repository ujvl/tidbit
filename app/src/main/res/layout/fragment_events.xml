<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thetidbitapp.tidbit.EventsFragment">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/tidbit_progress_circle"
        android:layout_width="@dimen/std_progress_size"
        android:layout_height="@dimen/std_progress_size"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        app:cpb_color="@color/primary"
        app:cpb_colors="@array/progress_colors"
        app:cpb_rotation_speed="1.0"
        app:cpb_sweep_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_min_sweep_angle="10"
        app:cpb_max_sweep_angle="300"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/tidbit_list_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <ListView
            android:id="@+id/tidbits_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/tab_container_height"
            android:scrollbars="none"/>

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
