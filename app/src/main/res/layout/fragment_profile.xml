<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context="com.thetidbitapp.tidbit.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView style="@style/HeadingStyle"
            android:text="Tidbits"/>

        <include layout="@layout/profile_item"
            android:id="@+id/prof_item_your_posts"/>

        <include layout="@layout/profile_item"
            android:id="@+id/prof_item_saved"/>

        <include layout="@layout/divider"/>

        <TextView style="@style/HeadingStyle"
            android:text="Notifications"/>

    </LinearLayout>

</ScrollView>
