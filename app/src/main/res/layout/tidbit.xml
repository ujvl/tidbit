<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mrl_rippleInAdapter="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleHover="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tidbit_img"
            android:layout_width="0dip"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="25"
            android:scaleType="centerCrop"
            android:src="@drawable/test_picture" />

        <!--<com.thetidbitapp.view.RoundedImageView-->
        <!--android:layout_width="92dp"-->
        <!--android:layout_height="92dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/test_picture"/>-->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tidbit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TidbitContentStyle"
                android:id="@+id/tidbit_datetime" />

            <TextView
                style="@style/TidbitContentStyle"
                android:id="@+id/tidbit_loc" />

            <TextView
                style="@style/TidbitContentStyle"
                android:id="@+id/tidbit_attendees" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="15"
            android:src="@drawable/test_check" />

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>